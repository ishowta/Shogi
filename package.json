{
  "name": "shogiverse",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/power-assert": "^1.5.0",
    "espower-typescript": "^9.0.2",
    "expose-loader": "0.7.5",
    "jest": "^24.9.0",
    "power-assert": "^1.6.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "6.0.4",
    "tslint": "^5.19.0",
    "typedoc": "^0.15.0",
    "typescript": "3.5.2",
    "typescript-tslint-plugin": "^0.5.4",
    "webpack": "4.35.2",
    "webpack-cli": "3.3.5",
    "webpack-dev-server": "3.7.2"
  },
  "dependencies": {
    "phaser": "3.18.1"
  },
  "scripts": {
    "dev": "webpack --mode development && webpack-dev-server --mode development",
    "build": "webpack --mode development",
    "test": "jest --ci",
    "coverage": "jest --coverage && sleep 3 && open file://$(pwd)/coverage/lcov-report/index.html",
    "doc": "typedoc --out docs/ src/ && sleep 3 && open file://$(pwd)/docs/index.html"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
